{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "task g++",    
            "command": "${env:UserPath}\\Documents\\mingw64\\bin\\g++.exe",  
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${env:UserPath}\\Documents\\mingw64\\bin"   
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}